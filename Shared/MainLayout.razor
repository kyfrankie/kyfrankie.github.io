@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudScrollToTop>
        <MudFab Color="Color.Tertiary" Icon="@Icons.Filled.ArrowCircleUp" />
    </MudScrollToTop>
    <MudAppBar Elevation="0" Color="Color.Transparent">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        @* <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/MudBlazor/MudBlazor/" Target="_blank" /> *@
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1" >
        <MudDrawerHeader>
            <MudStack>
                <MudImage src="images/Profile.jpeg" Alt="Profile picture" class="rounded-circle" Width="200" Height="200" ObjectFit="ObjectFit.Contain" ObjectPosition="ObjectPosition.Center" Elevation="25" />
                <MudText Typo="Typo.h6" Align="Align.Center" >Frankie Ka-yiu Hui</MudText>
                <MudStack Row="true" Justify="Justify.Center">
                    <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Target="https://www.linkedin.com/in/frankie-hui-457b641a3"></MudIconButton>
                    <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Target="https://github.com/kyfrankie"></MudIconButton>
                </MudStack>
            </MudStack>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}